<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity Revision.
    -->
    <changeSet id="20200326041100-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="article_id"
                                 baseTableName="revision"
                                 constraintName="fk_revision_article_id"
                                 referencedColumnNames="id"
                                 referencedTableName="article"/>

        <addForeignKeyConstraint baseColumnNames="type_id"
                                 baseTableName="revision"
                                 constraintName="fk_revision_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="article_type"/>

        <addForeignKeyConstraint baseColumnNames="area_id"
                                 baseTableName="revision"
                                 constraintName="fk_revision_area_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category_tree"/>

    </changeSet>
</databaseChangeLog>
